<p><strong>Question:</strong> <%= @question.body %></p>
<h3>Answers</h3>
<%= link_to 'New Answer', new_question_answer_path(@question)  %>
<ol>
  <%= render @question.answers %>
</ol>
<%= link_to 'Edit', edit_question_path(@question)  %> |
<%= link_to 'Delete',question_path(@question),data: {method: :delete, confirm: 'Are you sure?'} %>
<p><%= link_to 'Back', test_path(@question.test)  %></p>
