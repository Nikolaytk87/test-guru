<nav class="navbar navbar-light bg-light">
  <%= link_to t('nav.header'), root_path, class: "navbar-brand ms-3" %>
  <% if admin? %>
    <span class="badge bg-primary">
      <%= link_to t('nav.admin_header'), admin_tests_path,
                                         class: "gx-5 nav nav-link link-light" %>
    </span>
  <% end %>
  <span class="navbar-text me-3">
    <% if user_signed_in? %>
      <%= t('nav.welcome_html', user_email: current_user.email) %>
      <span class="badge bg-primary">
        <%= link_to t('nav.logout'), destroy_user_session_path, class:"nav nav-link link-light",
                                                                method: :delete,
                                                                data: {confirm: t('nav.confirm')} %>
      </span>
    <% else %>
      <div >
        <%= link_to t('nav.login'), new_user_session_path %> |
        <%= link_to t('nav.register'), new_user_registration_path %>
      </div>
    <% end %>
  </span>
</nav>
