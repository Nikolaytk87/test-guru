<tr class="table-light border-info">
  <td class="align-middle"><%= badge.title %></td>
  <td class="align-middle"><%= badge.image %></td>
  <td class="align-middle"><%= badge.rule_name %></td>
  <td class="align-middle"><%= badge.rule_value %></td>
  <td class="align-middle"><%= link_to t('actions.show'), admin_badge_path(badge)%> </td>
  <td class="align-middle">
    <%= link_to t('actions.edit'),edit_admin_badge_path(badge) %>
  </td>
  <td class="align-middle"><%= link_to t('actions.delete'), admin_badge_path(badge),
                            method: :delete,
                            data: { confirm: t('actions.confirm') }  %></td>
</tr>
