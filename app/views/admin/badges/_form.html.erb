<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :title %> <br>
      <%= form.text_field :title %>
    </div>
    <div class="col">
      <%= form.label :image %> <br>
      <%= form.text_field :image %>
    </div>
    <p>
      <%= form.label :rule_name %> <br>
      <%= form.select :rule_name, Badge::RULES, prompt: true %>
    </p>
    <p>
      <%= form.label :rule_value %> <br>
      <%= form.text_field :rule_value %>
    </p>
    <p><%= form.submit %></p>
  </div>
<% end %>
