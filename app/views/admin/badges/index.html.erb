<div class="container">
  <h3 class="row justify-content-center mb-4"><%= t('.header') %></h3>
  <span class="badge bg-primary mb-3">
    <%= link_to t('.new'), new_admin_badge_path,
                                         class: "gx-5 nav nav-link link-light" %>
  </span>
  <table class="table table-bordered text-center">
    <tr class="table-primary border-primary">
      <th class="sort-by-title pointer">
        <%= t('label.title') %>
      </th>
      <th><%= t('.image') %></th>
      <th><%= t('label.rule_name') %></th>
      <th><%= t('label.rule_value') %></th>
      <th colspan="3"><%= t('label.actions') %></th>
    </tr>
    <%= render @badges %>
  </table>
</div>
