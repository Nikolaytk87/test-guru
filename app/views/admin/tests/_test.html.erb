<tr class="table-light border-info">
  <td class="align-middle">
    <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id } %>
    <%= render 'form_inline', test: test == @test ? @test : test%>
  </td>
  <td class="align-middle"><%= number_of_questions(test) %></td>
  <td class="align-middle"><%= test.level %></td>
  <td class="align-middle"><%= test.timer %></td>
  <td class="align-middle"><%= link_to t('actions.show'), admin_test_path(test)%> </td>
  <td class="align-middle">
    <%= link_to t('actions.edit'),
                edit_admin_test_path(test),
                data: {test_id: test.id},
                class: 'form-inline-link' %>
  </td>
  <td class="align-middle"><%= link_to t('actions.delete'), admin_test_path(test),
                            method: :delete,
                            data: { confirm: t('actions.confirm') }  %></td>
</tr>
